pipeline {
    agent any

    environment {
        // Docker Hub credentials ID in Jenkins
        DOCKERHUB_CREDS = 'docker'

        // Docker Hub namespace (username or organization)
        DOCKERHUB_USER = 'sooria16'

        // Image names
        APP_NAME = 'knote-2'
        MONGO_IMAGE_NAME = 'knote-mongodb-2'

        JAVA_HOME = '/usr/lib/jvm/java-11-amazon-corretto.x86_64'
        PATH = "${JAVA_HOME}/bin:${PATH}"
    }

    stages {

        stage('Setup Environment') {
            steps {
                sh '''
                    sudo yum update -y
                    sudo yum install -y java-11-amazon-corretto git maven docker

                    sudo systemctl start docker
                    sudo usermod -aG docker $USER
                    sudo chmod 666 /var/run/docker.sock

                    java -version
                    mvn -version
                    docker --version
                '''
            }
        }

        stage('Checkout') {
            steps {
                cleanWs()
                git branch: 'dev', url: 'https://github.com/Sooria16/knote.git'
                sh 'find . -type d'
            }
        }

        stage('Build JAR') {
            steps {
                dir('knote/01') {
                    sh '''
                        mvn clean package -DskipTests
                        cp target/*.jar .
                    '''
                }
            }
        }

        stage('Build & Push MongoDB Image') {
            steps {
                script {
                    def mongoDir = "mongodb-docker"
                    sh "mkdir -p ${mongoDir}"

                    writeFile file: "${mongoDir}/Dockerfile", text: """
                        FROM mongo:5.0.22
                        EXPOSE 27017
                        CMD ["mongod", "--bind_ip_all"]
                    """

                    docker.withRegistry("https://index.docker.io/v1/", DOCKERHUB_CREDS) {
                        def mongoImg = docker.build(
                            "${DOCKERHUB_USER}/${MONGO_IMAGE_NAME}:${BUILD_NUMBER}",
                            mongoDir
                        )
                        mongoImg.push()
                        mongoImg.push("latest")
                    }
                }
            }
        }

        stage('Build & Push Application Image') {
            steps {
                script {
                    def dockerDir = "knote/01"

                    docker.withRegistry("https://index.docker.io/v1/", DOCKERHUB_CREDS) {
                        def appImg = docker.build(
                            "${DOCKERHUB_USER}/${APP_NAME}:${BUILD_NUMBER}",
                            dockerDir
                        )
                        appImg.push()
                        appImg.push("latest")
                    }
                }
            }
        }
    }

    post {
        success {
            echo "âœ” Uploaded to Docker Hub:"
            echo "   ${DOCKERHUB_USER}/${APP_NAME}:${BUILD_NUMBER}"
            echo "   ${DOCKERHUB_USER}/${APP_NAME}:latest"
            echo "   ${DOCKERHUB_USER}/${MONGO_IMAGE_NAME}:${BUILD_NUMBER}"
            echo "   ${DOCKERHUB_USER}/${MONGO_IMAGE_NAME}:latest"
        }
        always {
            cleanWs()
        }
    }
}

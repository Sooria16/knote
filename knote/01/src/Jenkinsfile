pipeline {
    agent any

    environment {
        // Nexus configuration
        NEXUS_URL = '16.147.62.222:8081'
        NEXUS_REPO = 'knoterepo'
        NEXUS_CREDENTIALS = 'nexus'
        APP_NAME = 'knote'
        DOCKER_IMAGE = "knoteimage:${BUILD_NUMBER}"

        // Environment variables
        JAVA_HOME = '/usr/lib/jvm/java-11-amazon-corretto.x86_64'
        PATH = "${JAVA_HOME}/bin:${PATH}"
    }

    stages {
        stage('Setup Environment') {
            steps {
                sh '''#!/bin/bash
                    sudo yum update -y
                    sudo yum install -y java-11-amazon-corretto git maven docker

                    sudo systemctl start docker
                    sudo usermod -aG docker $USER
                    sudo chmod 666 /var/run/docker.sock

                    echo "{\\"insecure-registries\\":["\\"${NEXUS_URL}\\""]}" | sudo tee /etc/docker/daemon.json
                    sudo systemctl restart docker

                    java -version
                    mvn -version
                    docker --version
                '''
            }
        }

        stage('Checkout') {
            steps {
                cleanWs()

                git branch: 'dev',
                    url: 'https://github.com/Sooria16/knote.git'

                sh 'echo "Repository structure:" && find . -type d'
            }
        }

        stage('Build JAR') {
            steps {
                dir('knote/01') {
                    sh '''#!/bin/bash
                        echo "Current directory: $(pwd)"
                        ls -la

                        if [ ! -f pom.xml ]; then
                            echo "ERROR: pom.xml not found in knote/01"
                            exit 1
                        fi

                        mvn clean package -DskipTests

                        echo "Copying JAR to Docker context..."
                        cp target/*.jar .
                        ls -la
                    '''
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    def dockerDir = "knote/01"

                    docker.withRegistry("http://${NEXUS_URL}", NEXUS_CREDENTIALS) {
                        def img = docker.build(
                            "${NEXUS_URL}/${NEXUS_REPO}/${APP_NAME}:${BUILD_NUMBER}",
                            dockerDir
                        )

                        img.push()
                        img.push("latest")
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo "Successfully built image: ${DOCKER_IMAGE}"
            echo "Also tagged as latest"
        }
        failure {
            echo "Pipeline failed â€” check logs."
        }
    }
}
